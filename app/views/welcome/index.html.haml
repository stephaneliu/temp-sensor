                Email
              %th.px-6.py-3.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase{scope: "col"}
                Role
              %th.relative.px-6.py-3{scope: "col"}
                %span.sr-only Edit
          %tbody
