.flex.flex-col
  .-my-2.overflow-x-auto.sm:-mx-6.lg:-mx-8
    .inline-block.min-w-full.py-2.align-middle.sm:px-6.lg:px-8
      .overflow-hidden.border-b.border-gray-200.shadow.sm:rounded-lg
        %table.min-w-full.divide-y.divide-gray-200
          %thead.bg-gray-50
            %tr
              %th.px-6.py-3.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase{scope: "col"}
                Name
              %th.px-6.py-3.text-xs.font-medium.tracking-wider.text-left.text-gray-500.uppercase{scope: "col"}
                Title
